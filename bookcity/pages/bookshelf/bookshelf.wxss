/* pages/bookshelf/bookshelf.wxss */
/* 正在阅读 */
.flex{
    display: flex;
}
.reading {
    padding: 40rpx 45rpx 0rpx 45rpx;
}
.reading .reading_title {
    padding: 35rpx 0rpx;
    justify-content: space-between;
}
.reading .reading_title .reading_title_text {
    font-size: 36rpx;
    font-weight: bold;
    color: #ffffff;
}
.reading .reading_title .reading_title_down {
    font-size: 26rpx;
    color: #a2a8ba;
}
.reading .reading_main {
    flex-wrap: wrap;
    
}
.reading .reading_main .reading_main_list{
    margin: 0rpx 20rpx 45rpx 0rpx;
    
}
.reading .reading_main .reading_main_list:nth-of-type(3n) {
    margin-right: 0rpx;
} 
.reading .reading_main .reading_main_list .works_img {
    position: relative;
    width: 205rpx;
    height: 300rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
.reading .reading_main .reading_main_list .works_img .img {
    position: absolute;
    width: 200rpx;
    height: 300rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.reading .reading_main .reading_main_list .works_title {
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    padding-top: 35rpx;
}
.reading .reading_main .reading_main_list .works_author {
    font-size: 28rpx;
    color: #5d637c;
    padding-top: 15rpx;
}
/* 未阅读 */
.not_read {
    padding: 40rpx 45rpx;
}
.not_read .not_read_title {
    padding: 35rpx 0rpx;
    justify-content: space-between;
}
.not_read .not_read_title .not_read_text {
    font-size: 36rpx;
    font-weight: bold;
    color: #ffffff;
}
.not_read .not_read_title .rnot_read_down {
    font-size: 26rpx;
    color: #a2a8ba;
}