/* 加入书架弹窗提示 */
.smectite {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    padding-top: 300rpx;
    background: rgba(0, 0, 0, 0.6);
}
.smectite .popup {
    width: 390rpx;
    height: 610rpx;
    border-radius: 42rpx;
    background-color: #363947;
    padding: 80rpx 65rpx 60rpx 65rpx;
    margin: 0 auto;
    text-align: center;
}
.smectite .popup .book_img {
    position: relative;
    width: 215rpx;
    height: 320rpx;
    border-radius: 12rpx;
    margin: 0 auto;
    overflow: hidden;
}
.smectite .popup .book_img .books_img {
    position: absolute;
    max-width: 225rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.smectite .popup .tips_text {
    font-size: 36rpx;
    letter-spacing: 8rpx;
    color: #ffffff;
    padding: 60rpx 30rpx;
}
.smectite .popup .ok_btn button {
    width: 100%;
    height: 95rpx;
    line-height: 95rpx;
    margin: 0;
    padding: 0;
    font-size: 28rpx;
    font-weight: 500;
    border-radius: 100rpx;
    background-color: #fb6894;
    color: #ffffff;
}
/* 分享弹窗 */
.share_popup {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 150rpx 90rpx 110rpx 90rpx;
    box-sizing: border-box;
    background-color: #2d353f;
    justify-content: space-between;
    animation: show 0.4s;
}
@keyframes show {
    0% {
        opacity: 0%;
    }
    25% {
        opacity: 25%;
    }
    50% {
        opacity: 50%;
    }
    75% {
        opacity: 75%;
    }
    100% {
        opacity: 100%;
    }
}
.share_popup .share_logo {
    position: relative;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #ffffff;
    box-sizing: border-box;
    overflow: hidden;
}
.share_popup .share_logo .logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 60rpx;
    height: 60rpx;
}
.share_popup .cancel {
    position: absolute;
    top: 35rpx;
    right: 35rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #1b1f24;
}
.share_popup .cancel .cancel_icon {
    position: relative;
    width: 50rpx;
    height: 50rpx;
    
}
.share_popup .cancel .cancel_icon .icon {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}