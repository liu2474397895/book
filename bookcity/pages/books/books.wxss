/* pages/books/books.wxss */
/* 书籍 */
page {
    position: relative;
    padding:30rpx 0rpx 0rpx 45rpx;
    box-sizing: border-box;
}
.flex{
    display: flex;
}
.book {
    margin: 30rpx 60rpx 65rpx 0rpx;
}
.book .books_img {
    position: relative;
    width: 215rpx;
    height: 320rpx;
    border-radius: 13rpx;
    overflow: hidden;
}
.book .books_img .book_img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    max-width: 220rpx;
}
.book .books_word {
    flex: 1;
    margin-left: 30rpx;
}
.book .books_word .book_title {
    font-size: 44rpx;
    font-weight: bold;
    color: #ffffff;
}
.book .books_word .book_author {
    font-size: 28rpx;
    color: #828d9a;
    padding: 28rpx 0rpx;
}
.book .books_word  .book_introduce {
    font-size: 28rpx;
    color: #828d9a;
    text-align: left;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 45rpx;
}
.book .books_word .book_evaluate {
    display: flex;
    align-content: space-around;
}
.book .books_word .book_evaluate .stare image {
    width: 30rpx;
    height: 30rpx;
}
.book .books_word .book_evaluate .score {
    font-size: 32rpx;
    color: #ffce44;
    margin-left: 25rpx;
}

/* 功能 */
.function {
    justify-content: space-between;
    padding: 45rpx 60rpx 45rpx 0rpx;
    border-top: 2px solid #343946;
    border-bottom: 2px solid #343946;
}
.function .flex .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
} 
.function .flex text {
    font-size: 28rpx;
    color: #ffffff;
}
/* 作品简介 */
.introduction {
    margin: 30rpx 60rpx 65rpx 0rpx;
}
.introduction .introduction_title {
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
    padding-bottom: 40rpx;
}
.introduction .introduction_text {
    font-size: 28rpx;
    color: #868dab;
    text-align: left;
    letter-spacing: 2rpx;
    line-height: 42rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
}
/* 查看目录 */
.catalog {
    justify-content: space-between;
    padding: 58rpx 60rpx 60rpx 0rpx;
    border-top: 2px solid #343946;
    border-bottom: 2px solid #343946;
}
.catalog .catalog_title {
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;

}
.catalog .catalog_icon {
    width: 48rpx;
    height: 48rpx;
    color: #9295a9;
}
/* 评论 */
.comment {
    padding-right: 60rpx;
}
.comment .comment_top {
    padding: 56rpx 0rpx;
}
.comment .comment_top .comment_title {
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
}
.comment .comment_top .comment_number {
    font-size: 26rpx;
    color: #007aff;
    margin-left: 25rpx;
}
.comment .comment_top .catalog_icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: auto;
    
}

.comment .comment_content {
    border-bottom: 1rpx solid #262d34;
}
.comment .comment_content .comment_content_main {
    display: flex;
    align-items: flex-start;
}
.comment .comment_content .comment_content_main .user_img {
    position: relative;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}
.comment .comment_content .comment_content_main .user_img image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    max-width: 60rpx;
    max-height: 60rpx;
}
.comment .comment_content .comment_content_main .user_main {
    margin-left: 20rpx;
    flex: 1;
}
.comment .comment_content .comment_content_main .user_main .user_name {
    font-size: 28rpx;
    color: #ffffff;
    margin-bottom: 30rpx;
}
.comment .comment_content .comment_content_main .user_main .user_comment {
    font-size: 24rpx;
    color: #868dab;
    text-align: left;
    letter-spacing: 2rpx;
    line-height: 42rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 8;
    overflow: hidden;
}
.comment .comment_content .comment_content_date {
    padding: 35rpx 0rpx;
    justify-content: space-between;
}
.comment .comment_content .comment_content_date .time {
    /* flex: 1; */
    padding-left: 75rpx;
}
.comment .comment_content .comment_content_date .time text {
    font-size: 24rpx;
    color: #656a7b;
    margin-right: 8rpx;
}
.comment .comment_content .comment_content_date .data {
    /* flex: 1; */
    text-align: right;
}
.comment .comment_content .comment_content_date .data .data_like {
    margin-right: 20rpx;
}
.comment .comment_content .comment_content_date .data .flex image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 12rpx;
}
.comment .comment_content .comment_content_date .data .flex text {
    font-size: 24rpx;
    color: #656a7b;
    margin-right: 8rpx;
}
