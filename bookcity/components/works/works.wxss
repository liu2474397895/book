/* components/works/works.wxss */

 .works_img {
    position: relative;
    width: 205rpx;
    height: 300rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
 .works_img .img {
    position: absolute;
    width: 205rpx;
    height: 300rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
 .works_title {
    width: 205rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    padding-top: 35rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
 .works_author {
    width: 205rpx;
    font-size: 28rpx;
    color: #5d637c;
    padding-top: 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}